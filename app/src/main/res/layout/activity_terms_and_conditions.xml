<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título Principal -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Términos y Condiciones de Uso de Intellihome"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <!-- Fecha de entrada en vigor -->
        <TextView
            android:id="@+id/effective_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de entrada en vigor: 3/10/2024"
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Introducción -->
        <TextView
            android:id="@+id/introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido a Intellihome. Al acceder y utilizar nuestra aplicación, usted acepta cumplir con los siguientes términos y condiciones. Si no está de acuerdo con estos términos, le solicitamos que no utilice nuestra aplicación."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 1: Definiciones -->
        <TextView
            android:id="@+id/section1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Definiciones"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section1_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Intellihome: Se refiere a la aplicación móvil y/o plataforma web que facilita el alquiler de propiedades.\n\n• Usuario: Cualquier persona que se registre y utilice Intellihome.\n\n• Propiedad: Cualquier inmueble disponible para alquiler a través de Intellihome."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 2: Aceptación de Términos -->
        <TextView
            android:id="@+id/section2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Aceptación de Términos"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section2_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Al registrarse y utilizar Intellihome, usted acepta estos términos y condiciones en su totalidad. Nos reservamos el derecho a modificar estos términos en cualquier momento, por lo que recomendamos revisarlos periódicamente."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 3: Registro de Usuario -->
        <TextView
            android:id="@+id/section3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Registro de Usuario"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section3_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para utilizar algunas funcionalidades de la aplicación, es necesario crear una cuenta. El Usuario se compromete a proporcionar información veraz y actualizada. Es responsabilidad del Usuario mantener la confidencialidad de sus credenciales de acceso."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 4: Uso de la Aplicación -->
        <TextView
            android:id="@+id/section4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Uso de la Aplicación"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section4_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Intellihome permite a los Usuarios buscar y alquilar propiedades.\n\n• El Usuario se compromete a utilizar la aplicación solo para fines lícitos y de acuerdo con las leyes aplicables."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 5: Propiedades -->
        <TextView
            android:id="@+id/section5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Propiedades"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section5_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Las propiedades listadas en Intellihome son ofrecidas por propietarios y agentes inmobiliarios.\n\n• Intellihome no es responsable de la veracidad, disponibilidad o estado de las propiedades."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 6: Comisiones y Pagos -->
        <TextView
            android:id="@+id/section6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Comisiones y Pagos"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section6_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Intellihome puede cobrar comisiones por los servicios ofrecidos. Las tarifas serán comunicadas claramente antes de confirmar cualquier transacción.\n\n• El Usuario acepta realizar los pagos a través de los métodos habilitados en la aplicación."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 7: Política de Cancelación -->
        <TextView
            android:id="@+id/section7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. Política de Cancelación"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section7_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Las políticas de cancelación varían según cada propiedad y serán indicadas en el anuncio correspondiente. Es responsabilidad del Usuario revisar estas políticas antes de realizar una reserva."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 8: Limitación de Responsabilidad -->
        <TextView
            android:id="@+id/section8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8. Limitación de Responsabilidad"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section8_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intellihome no será responsable de daños directos, indirectos, incidentales o consecuentes que surjan del uso de la aplicación o de la imposibilidad de uso."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 9: Propiedad Intelectual -->
        <TextView
            android:id="@+id/section9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9. Propiedad Intelectual"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section9_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todo el contenido de Intellihome, incluyendo textos, gráficos y logotipos, está protegido por derechos de propiedad intelectual. Queda prohibida la reproducción o distribución sin autorización."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 10: Modificaciones a los Términos -->
        <TextView
            android:id="@+id/section10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10. Modificaciones a los Términos"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section10_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nos reservamos el derecho de modificar estos términos en cualquier momento. Las modificaciones entrarán en vigor al ser publicadas en la aplicación. El uso continuado de Intellihome tras la publicación de cambios implica la aceptación de los mismos."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 11: Legislación Aplicable -->
        <TextView
            android:id="@+id/section11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11. Legislación Aplicable"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section11_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estos términos se rigen por las leyes de Costa Rica. Cualquier disputa relacionada con el uso de Intellihome será resuelta en los tribunales de San José."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Sección 12: Contacto -->
        <TextView
            android:id="@+id/section12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12. Contacto"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/section12_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para cualquier pregunta o inquietud sobre estos términos, por favor contáctenos en intellihome@gmail.com."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <!-- Botón para continuar -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
